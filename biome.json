{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules/**/*",
      "!**/dist/**/*",
      "!**/coverage/**/*",
      "!**/scripts/**/*",
      "!**/examples/**/*",
      "!**/load-env.js",
      "!**/run-tts-tests.js",
      "!src/core/language-utils.ts",
      "!src/engines/azure.ts",
      "!src/core/abstract-tts.ts",
      "!src/engines/google.ts",
      "!src/engines/openai.ts",
      "!src/engines/playht.ts",
      "!src/engines/polly.ts",
      "!src/utils/sherpaonnx-loader.js",
      "!src/__tests__/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "useConst": "warn",
        "noNegationElse": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
